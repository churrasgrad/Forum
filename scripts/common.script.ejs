<script>
  function sleep(time) {
    /*
      time: int (milisegundos)
      sleep(500).then(() => {
        // Fazer algo depois do tempo!
      });
    */
    return new Promise(resolve => setTimeout(resolve, time));
  }
  function convertToMoney(valueInCents, coinType) {
    /*
    Função para exibir dinheiro para o usuário. Converte centavos em reais e aplica o tipo de moeda.
    valueInCents: int
    coinType:     string (real, dolar, euro)
    convertToMoney(7650, 'real') //R$ 76,50
    */
    let string = "" //String para retornar
    let ponctuation = ","
    let symbols = {
      real: 'R$',
      dolar: 'US',
      euro: '€'
    }
    if(coinType == 'dolar') {
      ponctuation = "."
    }
    let value = (valueInCents/100).toFixed(2).replace('.', ponctuation)//Converte para valor com 2 decimais e troca a pontuação
    let symbol = symbols[coinType] //Pega o simbolo de acordo com a strin do usuario
    string = symbol + ' ' + value 
    if(coinType == 'euro') {
      string = value + ' ' + symbol
    }
    return string
  }
</script>